{%- if request.page_type == 'article' -%}
  
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ shop.url }}{{ article.url }}"
  },
  "headline": {{ article.title | json }},
  "description": {{ article.excerpt_or_content | strip_html | json }},
  "image": {{ article.image | img_url: '800x800' | prepend: 'https:' | json }},  
  "author": {
    "@type": "Organization",
    "name": {{ article.author | json }}
  },  
  "publisher": {
    "@type": "Organization",
    "name": {{ article.author | json }},
    "logo": {
      "@type": "ImageObject",
      "url": {{ article.image | img_url: '800x800' | prepend: 'https:' | json }}
    }
  },
  "datePublished": {{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' | json}},
  "dateModified": {{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' | json}}
}

  </script>
